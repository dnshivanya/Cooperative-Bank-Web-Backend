# Cooperative Banking Backend - Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cooperative-banking-prod

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-make-it-very-long-and-random
JWT_EXPIRE=24h

# Password Hashing
BCRYPT_ROUNDS=14

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FIELD_SIZE=1048576
UPLOAD_DIR=/var/uploads

# Security Settings
SESSION_SECRET=your-super-secure-session-secret-key-for-production
ENCRYPTION_KEY=your-32-character-encryption-key-for-production

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-app-specific-password

# Frontend URL
FRONTEND_URL=https://your-domain.com

# Logging
LOG_LEVEL=warn
LOG_DIR=/var/logs/cooperative-banking
LOG_FILE=/var/logs/cooperative-banking/app.log

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/cooperative-banking.crt
SSL_KEY_PATH=/etc/ssl/private/cooperative-banking.key

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Security Headers
CORS_ORIGIN=https://your-domain.com
HELMET_ENABLED=true

# Performance
CLUSTER_MODE=true
WORKER_PROCESSES=4
